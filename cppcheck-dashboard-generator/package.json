{
  "name": "cppcheck-dashboard-generator",
  "version": "1.0.0",
  "description": "Generate beautiful, interactive HTML dashboards from cppcheck JSON output with virtual scrolling",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cppcheck-dashboard": "./bin/cppcheck-dashboard"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test",
    "prepublishOnly": "npm run validate && npm run build",
    "prepare": "npm run build",
    "start": "node dist/cli.js",
    "example": "npm run build && node dist/cli.js ../data/analysis-with-context.json example-output.html",
    "example:basic": "npm run build && ts-node examples/basic-usage.ts",
    "example:advanced": "npm run build && ts-node examples/advanced-usage.ts",
    "release": "npm run validate && npm run build && npm publish",
    "release:dry": "npm run validate && npm run build && npm publish --dry-run"
  },
  "keywords": [
    "cppcheck",
    "dashboard",
    "static-analysis",
    "cpp",
    "c++",
    "code-quality",
    "virtual-scroll",
    "code-analysis",
    "visualization",
    "html-report"
  ],
  "author": "CPPCheck Dashboard Team",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/cppcheck-dashboard-generator#readme",
  "bugs": {
    "url": "https://github.com/yourusername/cppcheck-dashboard-generator/issues"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/cppcheck-dashboard-generator"
  }
}
